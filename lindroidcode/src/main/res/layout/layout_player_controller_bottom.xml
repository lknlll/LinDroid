<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#B3000000"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_controller_play"
        style="@style/common_image_style"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:scaleType="center"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_player_pause" />

    <TextView
        android:id="@+id/tv_controller_current"
        style="@style/common_text_style"
        android:layout_width="60dp"
        android:layout_gravity="center_vertical"
        android:text="00:00:00"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/sb_controller"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_weight="1"
        android:background="@null"
        android:max="100"
        android:maxHeight="1.5dp"
        android:minHeight="1.5dp"
        android:progressDrawable="@drawable/seek_progress"
        android:thumb="@mipmap/ic_sb_x_thumb" />

    <TextView
        android:id="@+id/tv_controller_duration"
        style="@style/common_text_style"
        android:layout_gravity="center_vertical"
        android:text="00:00:00"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_controller_enlarge"
        style="@style/common_image_style"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"/>
</LinearLayout>