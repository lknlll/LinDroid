<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".recyclerrelated.RecyclerRelatedActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/find_address_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/id_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_left_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="6dp"
                android:src="@mipmap/icon_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="8dp"
                android:text="想去杭州哪里逛逛"
                android:textStyle="bold"
                android:textColor="#191919"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/iv_right_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_map"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="12dp"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="汉洲是"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:text="汉洲是"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/find_address_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_city"/>

    <ImageView
        android:id="@+id/iv_drop_down"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/icon_dropdown_arrow"
        app:layout_constraintTop_toTopOf="@id/tv_city"
        app:layout_constraintBottom_toBottomOf="@id/tv_city"
        app:layout_constraintLeft_toRightOf="@id/tv_city"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/et_input"
        android:hint="输入小区、商圈、写字楼"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/icon_search"
        android:drawablePadding="@dimen/dp_4"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_round_corner_rect"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="@id/tv_city"
        app:layout_constraintBottom_toBottomOf="@id/tv_city"
        app:layout_constraintLeft_toRightOf="@id/iv_drop_down"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前定位"
        android:textSize="14sp"
        android:textColor="#999999"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_city"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_current_location"/>

    <ImageView
        android:id="@+id/iv_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_locate"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_current_location"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西溪路阿里中心·杭州Z空间"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#191919"
        tools:text="西溪路阿里中心·杭州Z空间"
        app:layout_constraintTop_toTopOf="@id/iv_current_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_current_location"
        app:layout_constraintLeft_toRightOf="@id/iv_current_location"
        android:id="@+id/tv_current_location_value"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新定位"
        android:textColor="#FF661D"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_current_location"
        app:layout_constraintBottom_toBottomOf="@id/iv_current_location"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_relocate"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F3F3F3"
        android:id="@+id/divider_a"
        app:layout_constraintTop_toBottomOf="@id/tv_relocate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="历史位置"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider_a"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_history_location"/>
    <ImageView
        android:id="@+id/iv_trash_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_trash_can"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toTopOf="@id/tv_history_location"
        app:layout_constraintBottom_toBottomOf="@id/tv_history_location"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.example.lindroidcode.recyclerrelated.AutoWrapView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_history_location"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/auto_wrap"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F3F3F3"
        android:id="@+id/divider_b"
        app:layout_constraintTop_toBottomOf="@id/auto_wrap"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全城热门地点"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider_b"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_global_hot"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_global_hot_address"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/tv_global_hot"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>