<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityrelated.LearnActivityActivity">

    <Button
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/bt_start_a"
        android:text="start A Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/TextContent"
        android:text="onStop方法"
        android:id="@+id/tv_on_stop_timing"
        app:layout_constraintTop_toBottomOf="@id/bt_start_a"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:text="bt_lifecycle"
        android:id="@+id/bt_lifecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_on_stop_timing"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        style="@style/TextContent"
        android:text="toast和dialog不触发onPause，对生命周期无影响"
        android:id="@+id/tv_on_pause_timing"
        app:layout_constraintTop_toBottomOf="@id/bt_lifecycle"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>