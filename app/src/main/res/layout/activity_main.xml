<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/draw_rect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="@string/draw_rect_title"/>

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="@string/GL_title"/>
    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/async_task_Loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="@string/AsyncTaskLoader_title"/>
    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/aidl_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="@string/aidl_demo_title"/>

</LinearLayout>